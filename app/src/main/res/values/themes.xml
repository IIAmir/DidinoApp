<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DidinoApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_Color</item>
        <item name="colorPrimaryVariant">@color/main_Color2</item>
        <item name="android:windowBackground">@color/main_Color</item>
        <item name="android:colorBackground">@color/main_Color</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:fontFamily">@font/iransanmobile_bold</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/iransanmobile_bold</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/iransanmobile_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="BottomNavigationViewTextStyleActive">
        <item name="android:fontFamily">@font/iransanmobile_bold</item>
        <item name="iconSize">24dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>